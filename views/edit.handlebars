<div class='card'>
  <div class='car-header'>
    <h1 class='single-post-text'>{{post.title}}</h1>
    <p class='single-post-text'>Posted by
      {{post.user.user_name}}
      on
      {{post.created_at}}</p>
  </div>
  <div class='card-text'>
    <p class='single-post-text'>
      {{post.post}}
    </p>
  </div>
</div>
<button class='delete-button'>Delete</button>
<button class='edit-post-button'>Edit</button>
<script src="/js/edit.js"></script>